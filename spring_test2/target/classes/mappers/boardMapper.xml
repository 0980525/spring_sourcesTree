<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myWeb.www.repository.BoardDAO">

	<insert id="insert">
		insert into board(title, writer, content)
		values(#{title}, #{writer}, #{content})
	</insert>
	<select id="getList" resultType="com.myWeb.www.domain.BoardVO">
		select * from board 
		<include refid="search"></include>
		order by bno desc limit #{pageStart}, #{qty}
	</select>
	<select id="getTotalCount" resultType="int">
		select count(bno) from board
		<include refid="search"></include>
	</select>
	<select id="getDetail" resultType="com.myWeb.www.domain.BoardVO">
		select * from board where bno = #{bno}
	</select>
	<update id="updateReadCnt">
		update board set read_count = read_count + #{count}
		where bno = #{bno}
	</update>
	<update id="updateCommentCount">
		update board b set cmt_qty =
		(select count(bno) from comment
		 where bno = b.bno
		);
	</update>
		<update id="updateFileCount">
		update board b set has_file =
		(select count(bno) from file
		 where bno = b.bno
		);
	</update>
	<update id="update">
		update board set 
		title = #{title}, 
		content = #{content}, 
		mod_at = now(),
		read_count = read_count-2,
		where bno = #{bno}
	</update>
	<delete id="delete">
		delete from board where bno = #{bno}
	</delete>
	<select id="selectOneBno" resultType="long">
		select max(bno) from board
	</select>
	

	<sql id="search">
		<if test="type != null">
			<trim prefix="where(" suffix=")" prefixOverrides="or">
				<foreach collection="typeToArray" item="type">
					<trim prefix="or">
						<choose>
							<when test="type == 't'.toString()">
								title like concat('%', #{keyword}, '%')
							</when>
							<when test="type == 'w'.toString()">
								writer like concat('%', #{keyword}, '%')
							</when>
							<when test="type == 'c'.toString()">
								content like concat('%', #{keyword}, '%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
</mapper>